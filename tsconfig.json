{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "ignoreDefinitionFiles": false,
        "configFile": "./tslint.json"
      }
    ]
  },
  "include": [
    "./src/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/__mocks__/**/*"
  ]
}
